

<div class="row no-gutters m3">
    <div class="card col-sm col-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Car Insurance Application Quote Form:</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CarInsurance", "Home", FormMethod.Post))
                {
            <div class="row no-gutters">
                <div class="form-group col-md-11">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-11">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-11">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-11">
                    <p>Date of Birth</p>
                    <input name="DateofBirth" type="date" value="2019-31-12"/>
                </div>
                <div class="form-group col-md-3">
                    <input name="CarYear" type="text" class="form-control"placeholder="Car Year"/>
                </div>
                <div class="form-group col-md-3">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make"/>
                </div>
                <div class="form-group col-md-3">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car model"/>
                </div>
                <div class="form-group col-md-5" name="Dui">
                    <p>
                        Have you ever had a DUI?
                    </p>
                    <select name="optDui">
                       <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <div class="form-group col-md-5" name="SpeedingTickets">
                    <p>
                        How many speeding tickets you've had?
                    </p>
                    <input name="Tickets" type="text" class="form-control" placeholder="Speeding tickets" />
                </div>
                <div class="form-group col-md-5" name="CoverageType">
                    <p>
                        Full coverage or liability?
                    </p>
                    <select name="optCoverage">
                        <option>Full</option>
                        <option>Liability</option>
                    </select>
                </div>
                <div class="form-group col-md-5" name="Base">
                    <p>
                        Start base of $50/month.
                    </p>
                </div>
                <button type="submit" class="btn btn-block btn-primary" name="Quote">Quote</button>

            </div>  

                }


            

        </div>
    </div>
</div>